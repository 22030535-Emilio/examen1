<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Si el archivo o directorio existe, servirlo directamente
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Todo lo dem√°s va a index.php
    RewriteRule ^ index.php [QSA,L]
</IfModule>